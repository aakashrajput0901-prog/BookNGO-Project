<% layout("/layouts/boilerplate") %>

    <h3> All Listings </h3>
    <!-- <form method = "GET" action = "/listings/new"> 
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md- row-cols-sm-1">
        <% for(let listing of allListings){ %>
        <div class="card col" style="width: 20rem;">
        <img src="<%= listing.image %>" class="card-img-top" alt="listing_image"  sstyle = "height: 20rem"/>
        <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %>   </b>
                 <br/>
                &#8377; <%=  listing.price.toLocaleString("en-In") %> / night
            </p>
        </div>
    </div>
    <% } %>
</div>






